<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import englishlearning.controls.*?>
<?import englishlearning.views.*?>
<?import javafx.geometry.Insets?>
<?import org.controlsfx.control.PopOver?>

<GridPane AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0" xmlns:fx="http://javafx.com/fxml/1">
    
    <fx:define>
        <PopOver fx:id="popOver" 
                 arrowIndent="0.0" 
                 arrowSize="0.0" 
                 cornerRadius="0.0" 
                 arrowLocation="LEFT_BOTTOM" 
                 detachable="false"
                 autoFix="true"
                 autoHide="true"
        >
            <contentNode>
                <GridPane xmlns:fx="http://javafx.com/fxml/1">
                    <padding><Insets bottom="8" left="8" right="8" top="4" /></padding>
                    <rowConstraints>
                        <RowConstraints vgrow="NEVER" />
                        <RowConstraints vgrow="NEVER" />
                    </rowConstraints>
                    <Label text="${readArticle.selectedWord.word.word}" />
                    <Label text="${readArticle.selectedWord.word.mean}" GridPane.rowIndex="1" />
                </GridPane>
            </contentNode>
        </PopOver>
    </fx:define>
    <columnConstraints>
        <ColumnConstraints hgrow="NEVER" minWidth="200"/>
        <ColumnConstraints hgrow="SOMETIMES" fillWidth="true" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <VBox alignment="TOP_LEFT">
            <GridPane.margin>
                <Insets bottom="5" left="5" right="25" top="5" />
            </GridPane.margin>
            <children>
                <Label text="${'Welcome ' + controller.user.user.name}" wrapText="true"/>
                <Label text="${'You have readed ' + controller.user.readedArticles + ' articles'}" wrapText="true"/>
                <ContentControl data="${controller.data}">
                    <resources>
                        <DataTemplate dataType="englishlearning.model.model.IArticle">
                            <GridPane>
                                <rowConstraints>
                                    <RowConstraints vgrow="NEVER" />
                                    <RowConstraints vgrow="SOMETIMES" fillHeight="true" />
                                </rowConstraints>
                                <HBox spacing="10">
                                    <padding>
                                        <Insets bottom="20" top="20" />
                                    </padding>
                                    <Button text="Back" onAction="#onReturn" />
                                    <Button text="Do test" visible="${controller.canTest}" />
                                </HBox>
                                <ListView fx:id="listView" items="${controller.wordList}" GridPane.rowIndex="1" GridPane.valignment="BOTTOM" />
                            </GridPane>
                        </DataTemplate>
                    </resources>
                </ContentControl>
           </children>
        </VBox>
        <ContentControl GridPane.columnIndex="1" data="${controller.data}">
            <resources>
                <DataTemplate dataType="englishlearning.model.model.IArticle">
                    <ReadArticle fx:id="readArticle" />
                </DataTemplate>
                <DataTemplate dataType="java.util.ArrayList">
                    <ArticlesList fx:id="articlesList" />
                </DataTemplate>
            </resources>
        </ContentControl>
    </children>
</GridPane>
