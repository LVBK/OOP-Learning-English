<GridPane AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0" xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints hgrow="NEVER" />
        <ColumnConstraints hgrow="SOMETIMES" />
        <ColumnConstraints hgrow="SOMETIMES" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <VBox alignment="TOP_LEFT">
            <GridPane.margin>
                <Insets bottom="5" left="5" right="25" top="5" />
            </GridPane.margin>
            <children>
                <Label text="${controller.user.welcomeMessage}" />
                <Label text="${controller.user.numberReadedMessage}" />
            </children>
        </VBox>
        <ArticlesList GridPane.columnIndex="1" />
    </children>
</GridPane>
