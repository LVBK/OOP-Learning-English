<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import englishlearning.controls.*?>
<?import englishlearning.views.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="NEVER" />
        <RowConstraints vgrow="SOMETIMES" fillHeight="true" />
    </rowConstraints>
    <Label text="${controller.article.article.title}" alignment="TOP_CENTER" /> 
    <ScrollPane hbarPolicy="NEVER" GridPane.rowIndex="1" fx:id="scrollPane" >
        <HyperlinkLabel fx:id="content" text="${controller.article.parsedContent}" maxWidth="${scrollPane.width-15}" textAlignment="JUSTIFY" >
            <padding>
                <Insets bottom="15" left="15" right="15" top="15" />
            </padding>
        </HyperlinkLabel>
    </ScrollPane>  
</GridPane>
