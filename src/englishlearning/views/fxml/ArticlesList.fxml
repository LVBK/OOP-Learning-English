<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import englishlearning.controls.*?>
<?import javafx.geometry.Insets?>
<?import org.controlsfx.control.textfield.CustomTextField?>
<?import englishlearning.presenter.callback.ArticlesItemFactory?>
<?import englishlearning.util.CustomTextFields?>


<GridPane xmlns:fx="http://javafx.com/fxml/1">
    <rowConstraints>
        <RowConstraints vgrow="NEVER" />
        <RowConstraints vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <CustomTextField fx:id="searchField" CustomTextFields.clearButtonField="true" promptText="Filter articles" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" >
            <GridPane.margin>
                <Insets bottom="5" left="5" right="5" top="5" />
            </GridPane.margin>
        </CustomTextField>
        <ListView GridPane.rowIndex="1" visible="${controller.notLoading}" items="${controller.articles}" minWidth="400">
            <cellFactory><ArticlesItemFactory /></cellFactory>
        </ListView>
        <Loading GridPane.rowIndex="1" alignment="BASELINE_CENTER" visible="${controller.loading}" />
    </children>
</GridPane>
